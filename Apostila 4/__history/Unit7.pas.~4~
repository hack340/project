unit Unit7;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TForm7 = class(TForm)
    ComboBox1: TComboBox;
    Label1: TLabel;
    Button1: TButton;
    Edit1: TEdit;
    Label2: TLabel;
    Edit2: TEdit;
    Label3: TLabel;
    Edit3: TEdit;
    Label4: TLabel;
    Memo1: TMemo;
    Button2: TButton;
    procedure Button2Click(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form7: TForm7;

implementation

{$R *.dfm}

procedure TForm7.Button1Click(Sender: TObject);
var
  produto: real;
  preco: real;
  qtd: real;
begin

//não deixar a quantidade zerada
  if edit3.text='' then
  begin
     edit3.text:= 1
  end;

//verificar e adicionar nas variaveis os valores, adicionar a informação no memo1
  if (edit1.text='') or (edit2.text='') or (edit3.text='') or (ComboBox1.ItemIndex='') then
  begin
    ShowMessage('Todos os campos devem estar preenchidos!')
  end
  else
  begin
   produto:= strtofloat(ComboBox1.Items[ComboBox1.itemindex]);
   preco:= strtofloat(edit2.text);
   qtd:= strtofloat(edit3.text);

   Memo1.Lines.Add((ComboBox1.Items[ComboBox1.itemindex]) +  ', ' + preco + ', ' + qtd);
  end;

end;



procedure TForm7.Button2Click(Sender: TObject);
var
  produto: real;
  preco: real;
  qtd: real;

  resultado: real;

begin
//verificar e adicionar nas variaveis os valores, adicionar a informação no memo1
  if (edit1.text='') or (edit2.text='') or (edit3.text='') or (ComboBox1.ItemIndex='') then
  begin
    ShowMessage('Todos os campos devem estar preenchidos!')
  end
  else
  begin
   produto:= strtofloat(ComboBox1.Items[ComboBox1.itemindex]);
   preco:= strtofloat(edit2.text);
   qtd:= strtofloat(edit3.text);
  end;

  resultado:= preço * qtd;

  if (edit1.text='') or (edit2.text='') or (edit3.text='') or (ComboBox1.ItemIndex='') then
  begin
    ShowMessage('Todos os campos devem estar preenchidos!')
  end
  else
  begin
    ShowMessage('A comissão do vendedor ' + edit1.text + ' é ' + floattostr((resultado*5)/100));
  end;
end;

end.
